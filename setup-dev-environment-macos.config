# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION - macOS
# ============================================================================
# Edit this file to select which tools to install
# Set to 'true' to install, 'false' to skip
#
# For help, run:
#   ./setup-dev-environment-macos.sh --help

# ============================================================================
# GENERAL SETTINGS
# ============================================================================
[General]
MinimalInstall=false
InstallHomebrew=true

# ============================================================================
# SYSTEM REQUIREMENTS
# ============================================================================
[SystemRequirements]
xcode-cli-tools=true

# ============================================================================
# USER-LEVEL TOOLS (Installed via Homebrew)
# ============================================================================

[UserLevel.CoreTools]
git=true
gh=true
curl=true
wget=true
jq=true
yq=true
ripgrep=true
fd=true
fzf=true
bat=true
tree=true
htop=true
ncdu=true
tldr=true

[UserLevel.Languages.Python]
install=true
pip-packages=true

[UserLevel.Languages.NodeJS]
nvm=true
yarn=true
pnpm=true
npm-global-packages=true

[UserLevel.Languages.Go]
install=true

[UserLevel.Languages.Rust]
install=true

[UserLevel.Languages.Java]
install=true
maven=true
gradle=true

[UserLevel.Languages.Ruby]
install=false
bundler=false

[UserLevel.Languages.PHP]
install=false
composer=false

[UserLevel.Languages.DotNet]
install=false

[UserLevel.Databases]
